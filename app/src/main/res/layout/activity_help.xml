<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour_2">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour_2"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <TextView
        android:id="@+id/setupText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_weight="1.05"
        android:text="What is BlockSave?"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/helpTextLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:layout_row="1"
        android:background="@drawable/border_style_1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/helpText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.71"
            android:text="BlockSave is a simple app to help you to save money. All you need to do is enter when you next get paid, and how much you have to spend until then."
            android:textSize="17sp" />

        <TextView
            android:id="@+id/helpText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1.88"
            android:text="We split your daily allowance into 10 blocks, which you are free to spend as you wish. Your daily block budget can rise or fall depending on how much you spend each day."
            android:textSize="17sp" />

        <TextView
            android:id="@+id/helpText3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="2dp"
            android:layout_weight="5.29"
            android:text="Simply press continue and fill out the details to get started."
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/helpTextButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:layout_row="2"
        android:background="@drawable/border_style_1"
        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/continueButton1"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginRight="12dp"
            android:layout_row="2"
            android:text="Continue to setup" />
    </LinearLayout>

</GridLayout>

</ScrollView>