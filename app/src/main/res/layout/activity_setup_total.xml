<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_colour_2">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_colour_2"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">


        <TextView
            android:id="@+id/setupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_row="0"
            android:text="How much money can you spend until your next pay day?"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/enterAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_column="0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_row="1"
            android:background="@drawable/border_style_1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="Enter amount:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/currency1"
                android:layout_width="15dp"
                android:layout_height="30sp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.00"
                android:text="$"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/budget"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.00"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockWorthLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_column="0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_row="2"
            android:layout_weight="1"
            android:background="@drawable/border_style_1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/blockValueText"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="32dp"
                android:layout_weight="0.48"
                android:gravity="right"
                android:text="A block is worth $0.00"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/notificationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_row="3"
            android:background="@drawable/border_style_1"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:id="@+id/morningNotification"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="7am morning reminder?"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/morningCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middayNotification"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="2pm afternoon reminder?"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/afternoonCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eveningNotification"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_column="0"
                android:layout_row="3"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:text="9pm evening reminder?"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/eveningCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp" />
            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:id="@+id/saveLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_column="0"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:layout_row="4"
            android:background="@drawable/border_style_1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="1">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="0.11"
                android:text="Save and continue" />

        </LinearLayout>

    </GridLayout>

</ScrollView>