<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blocksToSpendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:text="Blocks left to spend today:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blocksToSpendToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.14"
            android:text="10"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blockDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_row="1"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <GridLayout
            android:id="@+id/blockDisplayGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_row="0"
                android:background="@android:drawable/checkbox_off_background"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_row="1"
                android:background="@android:drawable/checkbox_off_background"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_row="0"
                android:background="@android:drawable/checkbox_off_background"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_column="1"
                android:layout_marginBottom="5dp"
                android:layout_row="1"
                android:background="@android:drawable/checkbox_off_background"
                android:orientation="horizontal"></LinearLayout>

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaseEntryLayout"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:layout_row="2"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/amountSpentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:text="Enter amount spent:   $ "
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/purchaseAmount"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="0.32"
            android:autoText="false"
            android:ems="10"
            android:hint="0.00"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaseButtonLayout"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_marginBottom="16dp"
        android:layout_row="3"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/purchaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="Add Purchase" />

        <TextView
            android:id="@+id/infoText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="0.23"
            android:paddingRight="8dp"
            android:text="Calculated blocks:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calculatedBlocks"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_row="4"
        android:text="Tomorrow"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_row="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="To increase daily budget by"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="monospace"
            android:text=" 1 block"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/underSpendLayout"
        android:layout_width="368dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_row="6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infoText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Under spend today by "
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/underSpendOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:fontFamily="monospace"
            android:text=" 9 blocks"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_row="7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To decrease daily budget by"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:fontFamily="monospace"
            android:text=" 1 block"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overSpendLayout"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_row="8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infoText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over spend today by "
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/overSpendOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:fontFamily="monospace"
            android:text=" 9 blocks"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blocksOverLayout"
        android:layout_width="368dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_marginLeft="16dp"
        android:layout_row="9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infoText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrows budget is "
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tomorrowsBudgetOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61dp"
            android:fontFamily="monospace"
            android:text=" 9 blocks"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </LinearLayout>


</GridLayout>